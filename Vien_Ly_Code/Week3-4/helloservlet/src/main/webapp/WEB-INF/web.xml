<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>helloservlet</display-name>

	<!-- WEB.XML aka Deployment Descriptor is the file with which we configure 
		our web apps Here we indicate url-patterns (endpoints) which we will send 
		requests to respective servlets and configure details like params and when 
		to init our servlets -->

	<context-param>
		<param-name>random</param-name>
		<param-value>some random context param</param-value>
	</context-param>

	<servlet>
		<servlet-name>HS</servlet-name>
		<servlet-class>com.rev.servlets.HelloServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>HS</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>HelloHttp</servlet-name>
		<servlet-class>com.rev.servlets.HelloHttpServlet</servlet-class>
		<init-param>
			<param-name>info</param-name>
			<param-value>Servlets are awesome</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloHttp</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>

</web-app>
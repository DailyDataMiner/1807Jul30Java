<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>hello-servlets</display-name>
	<!-- web.xml aka deployment descriptor is the file with which we configure 
		our web apps. Here, we indicate which url-patterns (endpoints) will send 
		requests to respective servlets and configure other details like parameters 
		and when to initialize our servlets. -->
	<context-param>
		<param-name>bio</param-name>
		<param-value>This is a test.</param-value>
	</context-param>

	<servlet>
		<servlet-name>HelloServlet</servlet-name>
		<servlet-class>com.iantimothyjohnson.notes.week4.servlets.HelloServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloServlet</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>HelloHttpServlet</servlet-name>
		<servlet-class>com.iantimothyjohnson.notes.week4.servlets.HelloHttpServlet</servlet-class>
		<init-param>
			<param-name>info</param-name>
			<param-value>Servlets are awesome!</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloHttpServlet</servlet-name>
		<url-pattern>/hellohttp</url-pattern>
	</servlet-mapping>
</web-app>
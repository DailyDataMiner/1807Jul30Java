<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>helloservlets</display-name>
  
  <!-- WEB.XML aka Deployment descriptor
  is the file with which we configure our web apps. Here, we indicate which url-patterns (endpoints)
  will send requests to respective servlets and configure other details like parametes and when to initialize our servlets -->
  
  <context-param>
  	<param-name>Bio</param-name>
  	<param-value>Raymond Duncan is the greatest coder this side of the metaphysical Mississippi.</param-value>
  </context-param>
  
  <servlet>
  	<servlet-name>Login</servlet-name>
  	<servlet-class>com.rev.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>HS</servlet-name>
  	<servlet-class>com.rev.servlets.HelloServlet</servlet-class>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
	<servlet-name>HS</servlet-name>
	<url-pattern>/hello</url-pattern>  	
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>HelloHttp</servlet-name>
  	<servlet-class>com.rev.servlets.HelloHTTPServlet</servlet-class>
  	<init-param>
  		<param-name>Info</param-name>
  		<param-value>Servlets are awesome</param-value>
  	</init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>HelloHttp</servlet-name>
  	<url-pattern>/hellohttp</url-pattern>
  </servlet-mapping>
  
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>